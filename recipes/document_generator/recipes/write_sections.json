{
  "steps": [
    {
      "type": "loop",
      "config": {
        "items": "sections",
        "item_key": "section",
        "result_key": "section.content",
        "substeps": [
          {
            "type": "conditional",
            "config": {
              "condition": "{% if section.content_key %}true{% else %}false{% endif %}",
              "if_true": {
                "steps": [
                  {
                    "type": "set_context",
                    "config": {
                      "key": "section.content",
                      "value": "{{ section.content_key }}"
                    }
                  },
                  {
                    "type": "write_files",
                    "config": {
                      "files": [
                        {
                          "path": "{{ section.title |snakecase }}.md",
                          "content_key": "section.content"
                        }
                      ],
                      "root": "{{ output_root }}"
                    }
                  }
                ]
              },
              "if_false": {
                "steps": [
                  {
                    "type": "execute_recipe",
                    "config": {
                      "recipe_path": "{{ recipe_root }}/recipes/draft_section.json"
                    }
                  }
                ]
              }
            }
          },
          {
            "type": "conditional",
            "config": {
              "condition": "{% assign has_children = section | has: 'sections' %}{% if has_children %}true{% else %}false{% endif %}",
              "if_true": {
                "steps": [
                  {
                    "type": "execute_recipe",
                    "config": {
                      "path": "recipes/document_generator/walk_outline.json",
                      "context_overrides": {
                        "sections": "{{ section.sections }}",
                        "model": "{{ model }}"
                      }
                    }
                  }
                ]
              }
            }
          }
        ]
      }
    }
  ]
}
