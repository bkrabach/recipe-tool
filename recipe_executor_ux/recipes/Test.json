{
  "steps": [
    {
      "type": "llm_generate",
      "config": {
        "label": "Generate Short Story",
        "prompt": "Write a short children's bedtime story.",
        "model": "openai/gpt-4o",
        "max_tokens": 10000,
        "output_format": "files",
        "output_key": "generated_story"
      }
    },
    {
      "type": "write_files",
      "config": {
        "files_key": "generated_story",
        "root": "output/story"
      }
    }
  ],
  "path": "recipes/Test.json"
}