# Documentation Server Configuration

# Comma-separated list of documentation paths
DOCS_SERVER_DOC_PATHS="/path/to/docs,/another/path"

# File patterns to include (comma-separated)
DOCS_SERVER_INCLUDE_PATTERNS="*.md,*.txt,*.rst"

# File patterns to exclude (comma-separated)
DOCS_SERVER_EXCLUDE_PATTERNS=".*,__pycache__,*.pyc"

# Maximum file size in bytes (default: 1MB)
DOCS_SERVER_MAX_FILE_SIZE=1048576

# Enable caching (true/false)
DOCS_SERVER_ENABLE_CACHE=true

# Cache TTL in seconds (default: 300 = 5 minutes)
DOCS_SERVER_CACHE_TTL=300

# Server host and port for SSE mode
DOCS_SERVER_HOST=localhost
DOCS_SERVER_PORT=3003